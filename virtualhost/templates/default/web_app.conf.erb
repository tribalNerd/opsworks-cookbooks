<% if node[:apache][:website] -%>
    <% node[:apache][:website].each do |website| -%>
<VirtualHost *:80>
    ServerName <%= node[:apache][:website][:domain] %>
    ServerAdmin <%= node[:apache][:website][:admin] %>
    DocumentRoot <%= node[:apache][:website][:root] %>
    RewriteEngine On
    <Directory <%= node[:apache][:website][:root] %>>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order deny,allow
        Allow from all
    </Directory>
    FileETag none
</VirtualHost>
    <% end -%>
<% end -%>