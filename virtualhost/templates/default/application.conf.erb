<VirtualHost *:<%= @vhostport %>>
    ServerName <%= @vhostdomain %>
    ServerAdmin <%= @vhostadmin %>
    DocumentRoot <%= @vhostroot %>
    <Directory <%= @vhostroot %>>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order deny,allow
        Allow from all
    </Directory>
    FileETag none
</VirtualHost>