<% @hosts.each do |node| %>
<VirtualHost *:80>
    ServerName <%= node['domain'] %>
    ServerAdmin <%= node['admin'] %>
    DocumentRoot <%= node['root'] %>
    <Directory <%= node['root'] %>>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order deny,allow
        Allow from all
    </Directory>
    FileETag none
</VirtualHost>
<% end %>