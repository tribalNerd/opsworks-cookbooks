<% if node[:web_apps][:website] -%>
    <% node[:web_apps][:website].each do |website| -%>
<VirtualHost *:80>
    ServerName <%= node[:web_apps][:website][:domain] %>
    ServerAdmin <%= node[:web_apps][:website][:admin] %>
    DocumentRoot <%= node[:web_apps][:website][:root] %>
    <Directory <%= node[:web_apps][:website][:root] %>>
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order deny,allow
        Allow from all
    </Directory>
    FileETag none
</VirtualHost>
    <% end -%>
<% end -%>